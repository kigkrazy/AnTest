<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/topbar"
        style="@style/NormalTopBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_app_genutdid"
                style="@style/NormalRoundButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="15dp"
                android:text="生成UTDID"/>

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_app_stop_service"
                style="@style/NormalRoundButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="15dp"
                android:text="@string/app_stop_service"/>

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_app_request_ip"
                style="@style/NormalRoundButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="15dp"
                android:text="@string/app_get_current_ip"/>

            <TextView
                android:id="@+id/tv_app_show_ip_title"
                style="@style/QDCommonTitle"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="15dp"
                android:text="@string/app_show_ip_title"/>

            <EditText
                android:id="@+id/et_app_show_log"
                style="@style/QDCommonDescription"
                android:layout_marginHorizontal="15dp"
                android:gravity="top"
                android:text="@string/app_show_ip_description"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>